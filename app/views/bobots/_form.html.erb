      <%= f.text_field :w2, :class => 'form-control' %>
    </div>
    <%=f.error_span(:w2) %>
  </div>
  <div class="form-group">
    <%= f.label :w3, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :w3, :class => 'form-control' %>
    </div>
    <%=f.error_span(:w3) %>
  </div>
  <div class="form-group">
    <%= f.label :w4, :class => 'control-label col-lg-2' %>
