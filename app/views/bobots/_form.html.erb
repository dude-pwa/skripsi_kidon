<%= form_for @bobot, :html => { :class => "form-horizontal bobot" } do |f| %>

  <% if @bobot.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@bobot.errors.count, "error") %> prohibited this bobot from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @bobot.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :w1, :class => 'control-label col-lg-2' %>
