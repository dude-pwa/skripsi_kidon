<script>
  $(document).ready(function(){
    $("body").hide();
    $("body").fadeIn(3000);
  });
</script>
<%- model_class = RekapDatum -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>No.</th>
      <th><%= model_class.human_attribute_name(:nama) %></th>
      <th><%= model_class.human_attribute_name(:tanggal_lahir) %></th>
      <th><%= model_class.human_attribute_name(:alamat) %></th>
      <th><%= model_class.human_attribute_name(:handphone) %></th>
      <th><%= model_class.human_attribute_name(:posisi) %></th>
      <th><%= model_class.human_attribute_name(:nilai) %></th>
      <th><%= model_class.human_attribute_name(:ranking) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @i = 1 %>
    <% @rekap_data.each do |rekap_datum| %>
      <tr>
        <td><%= @i %></td>
        <td><%= rekap_datum.nama %></td>
        <td><%= rekap_datum.tanggal_lahir %></td>
        <td><%= rekap_datum.alamat %></td>
        <td><%= rekap_datum.handphone %></td>
        <td><%= rekap_datum.posisi %></td>
        <td><%= rekap_datum.nilai %></td>
        <td><%= rekap_datum.ranking %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      rekap_datum_path(rekap_datum),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% @i += 1 %>
    <% end %>
  </tbody>
</table>


<%= link_to "Cetak Rekap Data", rekap_data_path(format: 'pdf'), class: 'btn btn-xs btn-primary' %>
