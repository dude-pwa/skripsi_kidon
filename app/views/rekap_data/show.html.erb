<%- model_class = RekapDatum -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nama) %>:</strong></dt>
  <dd><%= @rekap_datum.nama %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tanggal_lahir) %>:</strong></dt>
  <dd><%= @rekap_datum.tanggal_lahir %></dd>
  <dt><strong><%= model_class.human_attribute_name(:alamat) %>:</strong></dt>
  <dd><%= @rekap_datum.alamat %></dd>
  <dt><strong><%= model_class.human_attribute_name(:handphone) %>:</strong></dt>
  <dd><%= @rekap_datum.handphone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:posisi) %>:</strong></dt>
  <dd><%= @rekap_datum.posisi %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nilai) %>:</strong></dt>
  <dd><%= @rekap_datum.nilai %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ranking) %>:</strong></dt>
  <dd><%= @rekap_datum.ranking %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              rekap_data_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_rekap_datum_path(@rekap_datum), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              rekap_datum_path(@rekap_datum),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
