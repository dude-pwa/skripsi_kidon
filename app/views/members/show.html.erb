<%- model_class = Member -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nama) %>:</strong></dt>
  <dd><%= @member.nama %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tanggal_lahir) %>:</strong></dt>
  <dd><%= @member.tanggal_lahir.strftime('%d %B %Y') %></dd>
  <dt><strong><%= model_class.human_attribute_name(:handphone) %>:</strong></dt>
  <dd><%= @member.handphone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:alamat) %>:</strong></dt>
  <dd><%= @member.alamat %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              members_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_member_path(@member), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              member_path(@member),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
