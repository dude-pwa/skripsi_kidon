<%- model_class = Criterium -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:tinggi_badan) %>:</strong></dt>
  <dd><%= @criterium.tinggi_badan %></dd>
  <dt><strong><%= model_class.human_attribute_name(:berat_badan) %>:</strong></dt>
  <dd><%= @criterium.berat_badan %></dd>
  <dt><strong><%= model_class.human_attribute_name(:kecepatan_berlari) %>:</strong></dt>
  <dd><%= @criterium.kecepatan_berlari %></dd>
  <dt><strong><%= model_class.human_attribute_name(:akurasi_tendangan) %>:</strong></dt>
  <dd><%= @criterium.akurasi_tendangan %></dd>
  <dt><strong><%= model_class.human_attribute_name(:prestasi) %>:</strong></dt>
  <dd><%= @criterium.prestasi %></dd>
  <dt><strong><%= model_class.human_attribute_name(:member_id) %>:</strong></dt>
  <dd><%= @criterium.member_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:group_id) %>:</strong></dt>
  <dd><%= @criterium.group_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              criteria_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_criterium_path(@criterium), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              criterium_path(@criterium),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
