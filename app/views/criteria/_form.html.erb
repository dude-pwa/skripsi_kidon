<%= form_for @criterium, :html => { :class => "form-horizontal criterium" } do |f| %>

  <% if @criterium.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@criterium.errors.count, "error") %> prohibited this criterium from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @criterium.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :member_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :member_id, Member.all, :id, :nama, :class => 'form-control' %>
    </div>
    <%=f.error_span(:member_id) %>
  </div>
  <div class="form-group">
    <%= f.label :group_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :group_id, Group.all, :id, :posisi, :class => 'form-control' %>
    </div>
    <%=f.error_span(:group_id) %>
  </div>
  <div class="form-group">
    <%= f.label :tinggi_badan, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :tinggi_badan, :class => 'form-control' %>
    </div>
    <%=f.error_span(:tinggi_badan) %>
  </div>
  <div class="form-group">
    <%= f.label :berat_badan, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :berat_badan, :class => 'form-control' %>
    </div>
    <%=f.error_span(:berat_badan) %>
  </div>
  <div class="form-group">
    <%= f.label :kecepatan_berlari, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :kecepatan_berlari, :class => 'form-control' %>
    </div>
    <%=f.error_span(:kecepatan_berlari) %>
  </div>
  <div class="form-group">
    <%= f.label :akurasi_tendangan, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.radio_button :akurasi_tendangan, 'Tepat' %> Tepat <br>
      <%= f.radio_button :akurasi_tendangan, 'Kurang Tepat' %> Kurang Tepat
    </div>
    <%=f.error_span(:akurasi_tendangan) %>
  </div>
  <div class="form-group">
    <%= f.label :prestasi, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :prestasi, :class => 'form-control' %>
    </div>
    <%=f.error_span(:prestasi) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                criteria_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
